<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white"
    android:orientation="vertical"
    tools:context=".DetailProduct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_product_detail_back"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:src="@drawable/back_48px" />

            <ImageView
                android:id="@+id/iv_product_detail_cart"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:src="@drawable/cart_32px" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_product_detail_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/beef_sukiyaki" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_product_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:paddingVertical="10dp"
            android:text="Beef pepper rice"
            android:textColor="@color/colorText"
            android:textSize="24dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_main"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rounded_button_add_on_cart"
            android:gravity="center"
            android:padding="12dp"
            android:text="Thêm vào giỏ hàng"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

</LinearLayout>