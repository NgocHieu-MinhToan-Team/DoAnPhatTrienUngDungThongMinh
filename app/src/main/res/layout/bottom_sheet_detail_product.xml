<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/whiteSmoke"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_product_detail_image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/beef_sukiyaki"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_product_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/yellowGold"
                android:text="Beef pepper rice"
                android:textSize="20dp"
                android:paddingVertical="10dp"
                />
            <TextView
                android:id="@+id/tv_product_detail_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorText"
                android:text="20.000 D"
                android:textSize="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"
                >
                <ImageButton
                    android:id="@+id/btn_detail_product_decrease"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_baseline_remove_24"
                    android:outlineAmbientShadowColor="@color/colorText"
                    android:background="@null"
                    />
                <TextView
                    android:id="@+id/tv_detail_product_quantity"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:inputType="number"
                    android:textSize="20dp"
                    android:text="0"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginHorizontal="10dp"
                    />
                <ImageButton
                    android:id="@+id/btn_detail_product_increase"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:outlineSpotShadowColor="@color/red"
                    android:src="@drawable/ic_baseline_add_24"
                    android:background="@null"
                    />
            </LinearLayout>
        </LinearLayout>

        </LinearLayout>
<!--    Option here-->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/whiteSmoke"
        android:paddingHorizontal="10dp"
        android:buttonTint="@color/whiteSmoke"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/radio_a"
            android:text="No Spicy"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginVertical="10dp"

            />
        <RadioButton
            android:id="@+id/radio_b"
            android:text="Less Spicy"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/radio_c"
            android:layout_weight="1"
            android:text="Spicy"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:layout_marginVertical="10dp"
            android:layout_height="wrap_content" />
    </RadioGroup>
<!--    note here-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:cardCornerRadius="12dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:paddingHorizontal="20dp"
            android:textSize="20dp"
            android:textColor="@color/colorText"
            android:gravity="center_vertical"
            android:background="@null"
            android:hint="Note"
            />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        >
        <Button
            android:id="@+id/btn_detail_product_addToCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add To Cart"
            android:textSize="20dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:padding="12dp"
            android:background="@drawable/rounded_button_add_on_cart"
            />
    </LinearLayout>
</LinearLayout>