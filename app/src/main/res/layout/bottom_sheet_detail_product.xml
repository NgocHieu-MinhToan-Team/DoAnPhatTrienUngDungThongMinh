<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whiteSmoke"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_product_detail_image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/beef_sukiyaki" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tv_product_detail_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:text="Beef pepper rice"
                android:textColor="@color/yellowGold"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_product_detail_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20.000 D"
                android:textColor="@color/colorText"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_detail_product_decrease"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@null"
                    android:outlineAmbientShadowColor="@color/colorText"
                    android:src="@drawable/ic_baseline_remove_24" />

                <TextView
                    android:id="@+id/tv_detail_product_quantity"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:text="1"
                    android:textColor="@color/colorText"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_detail_product_increase"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@null"
                    android:outlineSpotShadowColor="@color/red"
                    android:src="@drawable/ic_baseline_add_24" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <!--    Option here-->
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:buttonTint="@color/whiteSmoke"
        android:orientation="horizontal"
        android:outlineSpotShadowColor="@color/whiteSmoke"
        android:paddingHorizontal="10dp">

        <RadioButton
            android:id="@+id/radio_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:checked="true"
            android:text="No Spicy"
            android:textSize="20dp"

            />

        <RadioButton
            android:id="@+id/radio_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:text="Less Spicy"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/radio_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_weight="1"
            android:text="Spicy"
            android:textSize="20dp" />
    </RadioGroup>
    <!--    note here-->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:background="@color/white"
        app:cardCornerRadius="12dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="Note"
            android:inputType="text"
            android:paddingHorizontal="20dp"
            android:textColor="@color/colorText"
            android:textSize="20dp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp">

        <Button
            android:id="@+id/btn_detail_product_addToCart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_button_add_on_cart"
            android:gravity="center"
            android:padding="12dp"
            android:text="Add To Cart"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>