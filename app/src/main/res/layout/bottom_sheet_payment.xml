<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Address"
        android:textSize="18dp"
        android:padding="10dp"
        android:textStyle="bold"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/whiteSmoke"
        android:paddingHorizontal="20dp"
        android:orientation="vertical"
        >
        <RadioButton
            android:id="@+id/tv_payment_yourAddress"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Address"
            android:textSize="20dp"
            android:layout_marginVertical="10dp"
            />
        <RadioButton
            android:id="@+id/tv_payment_otherAddress"
            android:textSize="20dp"
            android:text="Other address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            />
    </RadioGroup>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="10dp"
            android:id="@+id/edt_other_address"
            android:visibility="gone">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter other address"
                android:textSize="20dp"
                android:background="@null"
                android:id="@+id/text_address"

                />
        </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voucher"
            android:textSize="18dp"
            android:padding="10dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Voucher Choosen"
            android:textSize="20dp"
            android:id="@+id/tv_voucher_name"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_gravity="center"
            android:background="@color/white"
            android:id="@+id/btn_delete_voucher"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_voucher"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Method"
        android:textSize="18dp"
        android:padding="10dp"
        android:textStyle="bold"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_method"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total :"
            android:textSize="18dp"
            android:padding="10dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_payment_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50k"
            android:textSize="18dp"
            android:padding="10dp"
            android:textColor="@color/red_logo"
            android:textAlignment="textEnd"
            android:textStyle="bold"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount : "
            android:textSize="18dp"
            android:padding="10dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_payment_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18dp"
            android:padding="10dp"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay : "
            android:textSize="18dp"
            android:padding="10dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_payment_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="18dp"
            android:padding="10dp"
            android:textAlignment="textEnd"
            android:textColor="@color/red_logo"
            android:textStyle="bold"
            />
    </LinearLayout>
    </LinearLayout>
</ScrollView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/red_logo"
        app:cardCornerRadius="20dp"
        >
        <Button
            android:id="@+id/btn_pay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Pay"
            android:textSize="22dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@color/yellowGold"
            android:textColor="@color/white"
            android:padding="12dp"
            android:layout_weight="1"
            />
    </androidx.cardview.widget.CardView>

</LinearLayout>