<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/modal_bottom_sheet_sigup_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="ĐĂNG KÝ"
        android:textAlignment="center"
        android:textColor="@color/red_logo"
        android:textSize="32dp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:labelFor="@+id/txt_fullname_signup"
        android:text="Họ tên"
        android:textColor="@color/colorText"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt_fullname_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Nhập họ tên"
        android:inputType="text"
        android:padding="16dp"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:labelFor="@+id/txt_birthday"
        android:text="Ngày sinh"
        android:textColor="@color/colorText"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elegantTextHeight="false"
        android:hint="Chọn ngày sinh"
        android:inputType="date"
        android:padding="16dp"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:labelFor="@+id/spinner_sex"
        android:text="Giới tính"
        android:textColor="@color/colorText"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:entries="@array/sex_array"
        android:padding="16dp"
        android:spinnerMode="dropdown"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:labelFor="@+id/txt_phone_number"
        android:text="Tên đăng nhập"
        android:textColor="@color/colorText"
        android:textSize="18dp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/txt_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:hint="Nhập số điện thoại"
        android:inputType="phone"
        android:padding="16dp"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:labelFor="@id/txt_pwd_signup"
        android:text="Mật khẩu"
        android:textColor="@color/colorText"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt_pwd_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/font_main"
        android:hint="Nhập mật khẩu"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:labelFor="@id/txt_repwd"
        android:text="Nhập lại mật khẩu"
        android:textColor="@color/colorText"
        android:textSize="18dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt_repwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/font_main"
        android:hint="Nhập lại mật khẩu"
        android:inputType="textPassword"
        android:padding="16dp"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:backgroundTint="@color/red_logo"
        android:minHeight="48dp"
        android:onClick="login"
        android:padding="10dp"
        android:text="Đăng ký"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
</LinearLayout>